    <!-- Script para interactividad de categorías -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            // --- Base de datos de productos (simulada) ---
            const productData = {
                'Mujer': [
                    { img: 'https://placehold.co/300x300/f8b4b4/333333?text=Blusa+Rosa', name: 'Blusa de Lino Rosa', price: 'RD$850', oldPrice: '1,200' },
                    { img: 'https://placehold.co/300x300/a0c4ff/333333?text=Vestido+Azul', name: 'Vestido de Verano Azul', price: 'RD$1,100', oldPrice: '1,900' },
