                ],
                // Añadir más categorías si es necesario...
                'Deportes': [
                    { img: 'https://placehold.co/300x300/ff6b6b/ffffff?text=Pesa+Roja', name: 'Mancuerna Roja 5kg', price: 'RD$600', oldPrice: '900' },
                    { img: 'https://placehold.co/300x300/4ecdc4/333333?text=Yoga+Mat', name: 'Mat de Yoga Turquesa', price: 'RD$800', oldPrice: '1,100' },
                    { img: 'https://placehold.co/300x300/1a1a1a/ffffff?text=Zapatillas', name: 'Zapatillas de Correr', price: 'RD$2,200', oldPrice: '3,500' },
                    { img: 'https://placehold.co/300x300/5d5d5d/ffffff?text=Botella', name: 'Botella de Agua Acero', price: 'RD$450', oldPrice: '600' }
                ],
                'Niños': [
                    { img: 'https://placehold.co/300x300/fff700/333333?text=Juguete', name: 'Bloques de Construcción', price: 'RD$750', oldPrice: '1,100' },
