                    { img: 'https://placehold.co/300x300/718096/ffffff?text=Cargador', name: 'Cargador Portátil', price: 'RD$1,100', oldPrice: '1,500' },
                    { img: 'https://placehold.co/300x300/c6f6d5/333333?text=Altavoz', name: 'Altavoz Inteligente', price: 'RD$2,200', oldPrice: '3,000' }
                ],
                'Juguetes': [
                    { img: 'https://placehold.co/300x300/f56565/ffffff?text=Auto+Rojo', name: 'Auto a control remoto', price: 'RD$1,300', oldPrice: '2,000' },
                    { img: 'https://placehold.co/300x300/faf089/333333?text=Oso+Peluche', name: 'Oso de Peluche Grande', price: 'RD$900', oldPrice: '1,200' },
                    { img: 'https://placehold.co/300x300/805ad5/ffffff?text=Muñeca', name: 'Muñeca Articulada', price: 'RD$700', oldPrice: '1,000' },
                    { img: 'https://placehold.co/300x300/38b2ac/ffffff?text=Puzzle', name: 'Puzzle 1000 Piezas', price: 'RD$550', oldPrice: '800' }
                ],
            };

            // --- Elementos del DOM ---
            const categoryNav = document.getElementById('category-nav-list');
            const navLinks = categoryNav.querySelectorAll('.nav-link');
            const productContainer = document.getElementById('product-grid-container');
            
            // Guardar el HTML original de la categoría "Todos"
            const todosHtml = productContainer.innerHTML;

            // --- Función para renderizar productos ---
            function renderProducts(category) {
                // Limpiar contenedor
                productContainer.innerHTML = '';

                let productsHtml = '';

                if (category === 'Todos') {
                    productsHtml = todosHtml;
                } else {
                    const products = productData[category] || []; // Obtener productos o un array vacío
                    
                    // Iniciar la cuadrícula
                    productsHtml = '<div class="grid grid-cols-2 gap-3">';

                    if (products.length > 0) {
                        // Crear HTML para cada producto
                        productsHtml += products.map(product => `
                            <a href="#" class="bg-white rounded-lg shadow-sm overflow-hidden border border-gray-200 hover:shadow-md transition-shadow">
                                <img src="${product.img}" alt="${product.name}" class="w-full h-48 object-cover">
                                <div class="p-3">
                                    <p class="text-sm text-gray-700 truncate">${product.name}</p>
                                    <span class="text-xl font-bold text-gray-900">${product.price}</span>
                                    <span class="text-sm text-gray-500 line-through ml-2">${product.oldPrice}</span>
                                </div>
                            </a>
                        `).join('');
                    } else {
                        // Mensaje si no hay productos
                        productsHtml += '<p class="col-span-2 text-center text-gray-500 py-8">No hay productos en esta categoría.</p>';
                    }

                    // Cerrar la cuadrícula
                    productsHtml += '</div>';
                }

                // Insertar el HTML en el contenedor
                productContainer.innerHTML = productsHtml;
            }

            // --- Manejador de Clics en Categorías ---
            categoryNav.addEventListener('click', (e) => {
                // Asegurarse de que se hizo clic en un enlace (A)
                if (e.target.tagName !== 'A') return;

                e.preventDefault(); // Prevenir navegación

                const clickedLink = e.target;
                const categoryName = clickedLink.textContent.trim();

                // 1. Actualizar estilos de navegación
                navLinks.forEach(link => {
                    link.classList.remove('text-orange-600', 'font-bold', 'border-b-2', 'border-orange-600', 'pb-2');
                    link.classList.add('text-gray-600', 'font-semibold');
                });

                clickedLink.classList.add('text-orange-600', 'font-bold', 'border-b-2', 'border-orange-600', 'pb-2');
                clickedLink.classList.remove('text-gray-600', 'font-semibold');

                // 2. Renderizar los productos
                renderProducts(categoryName);
            });

        });
    </script>

